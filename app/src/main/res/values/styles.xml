<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#5F7DAF</item>
        <item name="colorPrimaryDark">#B3B3CC</item>
        <item name="colorAccent">#E2C3C8</item>
    </style>

    <style name="inputview_style">
        <item name="android:isScrollContainer">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_row">0</item>
        <item name="android:layout_rowSpan">5</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_column">0</item>
        <item name="android:layout_columnSpan">4</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:gravity">top|right</item>
        <item name="android:textSize">40dp</item>
    </style>

    <style name="lightbutton_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:gravity">fill</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">#F7DFD3</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:onClick">onClick</item>
    </style>

    <style name="calculatebutton_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowSpan">2</item>
        <item name="android:gravity">fill</item>
        <item name="android:textSize">35sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:background">#F7DFD3</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:onClick">onClick</item>
    </style>
</resources>